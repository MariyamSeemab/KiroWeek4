# Retro AI Paint Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# AI Service Configuration
AI_MOCK_MODE=false
DEFAULT_AI_PROVIDER=replicate
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Alternative AI Providers (optional)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro-vision

# FREE AI Providers (no API keys needed!)
HF_FREE_MODEL=runwayml/stable-diffusion-v1-5
DEFAULT_AI_PROVIDER=huggingface-free

# Local AI (completely offline and free)
LOCAL_AI_ENDPOINT=http://localhost:7860
LOCAL_AI_MODEL=stable-diffusion

# Redis Configuration for Caching and Queues
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Generation Settings
MAX_CONCURRENT_GENERATIONS=5
CACHE_EXPIRATION_HOURS=24
MAX_COST_PER_GENERATION=0.50
REQUEST_TIMEOUT_MS=300000

# Image Processing
MAX_IMAGE_SIZE=10485760  # 10MB in bytes
SUPPORTED_FORMATS=png,jpg,jpeg,webp

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000  # 30 seconds

# Logging
LOG_LEVEL=info